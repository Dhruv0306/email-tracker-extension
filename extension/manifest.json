{
    "manifest_version": 3,
    "name": "Email Tracker",
    "version": "0.1.0",
    "permissions": [
        "notifications",
        "storage",
        "alarms",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "http://127.0.0.1:8000/*"
    ]
}